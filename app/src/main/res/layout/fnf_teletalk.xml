<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayoutFnfTeletalk"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.moodybugs.saim.bdsimservices.FnfTeletalk">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapWell
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bootstrapSize="md">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Teletalk FnF Services"
                android:textSize="16sp"
                android:textStyle="bold" />
        </com.beardedhen.androidbootstrap.BootstrapWell>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="How to set FnF"
                android:textColor="#555"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_mid"
                android:padding="10dp"
                android:text="Dial 1515, and follow the next instruction thereafter\nOR\nSMS to 363 as follows" />
        </LinearLayout>
        <!--Registration Process-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="REGISTRATION"
                android:textColor="#555"
                android:textStyle="bold" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_custome_mid"
                    android:padding="10dp"
                    android:layout_weight=".1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Registration : REG"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_custome_mid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.moodybugs.saim.bdsimservices.ButtonAwesome
                        android:id="@+id/btnRegSendTl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_tl_action"
                        android:text="@string/fa_send"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- Add Fnf Panel-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="ADD FNF"
                android:textColor="#555"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp"
                        android:text="Add 015XXAABBCC" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/txtAddFnfTl"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:background="@drawable/txtbox_tl_normal"
                            android:hint="I am text box"
                            android:padding="5dp"
                            android:textSize="16dp" />

                        <com.moodybugs.saim.bdsimservices.ButtonAwesome
                            android:id="@+id/btnAddFnfImportNumberTl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@+id/txtAddFnfTl"
                            android:layout_toRightOf="@+id/txtAddFnfTl"
                            android:background="@drawable/btn_tl_right_action"
                            android:padding="5dp"
                            android:text="@string/fa_arrow_circle_down"
                            android:textColor="#FFF"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_custome_mid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.moodybugs.saim.bdsimservices.ButtonAwesome
                        android:id="@+id/btnAddFnfSendTl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_tl_action"
                        android:text="@string/fa_send"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--Delete FnF or SFnF-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="DELETE FNF"
                android:textColor="#555"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp"
                        android:text="Del 018XXAABBCC" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/txtDeleteFnfTl"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:background="@drawable/txtbox_tl_normal"
                            android:hint="I am text box"
                            android:padding="5dp"
                            android:textSize="16dp" />

                        <com.moodybugs.saim.bdsimservices.ButtonAwesome
                            android:id="@+id/btnDeleteFnfImportNumberTl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@+id/txtDeleteFnfTl"
                            android:layout_toRightOf="@+id/txtDeleteFnfTl"
                            android:background="@drawable/btn_tl_right_action"
                            android:padding="5dp"
                            android:text="@string/fa_arrow_circle_down"
                            android:textColor="#FFF"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_custome_mid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.moodybugs.saim.bdsimservices.ButtonAwesome
                        android:id="@+id/btnDeleteFnfSendTl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_tl_action"
                        android:text="@string/fa_send"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--Delete FnF or SFnF End-->

        <!--Change Super FnF Number-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="CHECK AND CHANGE FNF"
                android:textColor="#555"
                android:textStyle="bold" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_custome_mid"
                    android:padding="10dp"
                    android:layout_weight=".1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Check FnF : Just Send"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_custome_mid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.moodybugs.saim.bdsimservices.ButtonAwesome
                        android:id="@+id/btnCheckFnfSendTl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_tl_action"
                        android:text="@string/fa_send"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight=".1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_custome_mid"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Change FnF : 1515"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_custome_mid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.moodybugs.saim.bdsimservices.ButtonAwesome
                        android:id="@+id/btnHelpSendTl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_tl_action"
                        android:text="@string/fa_send"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
