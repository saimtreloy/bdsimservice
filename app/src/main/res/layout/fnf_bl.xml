<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutFnfBl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.moodybugs.saim.bdsimservices.FnfBl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.beardedhen.androidbootstrap.BootstrapWell
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bootstrapSize="md">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Banglalink FnF Services"
                android:textSize="16sp"
                android:textStyle="bold" />
        </com.beardedhen.androidbootstrap.BootstrapWell>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="How to set Fnf and Super Fnf"
                android:textColor="#555"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_mid"
                android:padding="10dp"
                android:text="Dial 121, Select'FnF or sFnF and follow instruction thereafter\nOR\nSMS to 3030 as follows" />
        </LinearLayout>

        <!-- Add Fnf Panel-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="ADD FNF"
                android:textColor="#555"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp"
                        android:text="Add 019XXAABBCC" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/txtAddFnFBl"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:background="@drawable/txtbox_bl_normal"
                            android:hint="I am text box"
                            android:padding="5dp"
                            android:textSize="16dp" />

                        <com.moodybugs.saim.bdsimservices.ButtonAwesome
                            android:id="@+id/btnAddFnfImportNumberBl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@+id/txtAddFnFBl"
                            android:layout_toRightOf="@+id/txtAddFnFBl"
                            android:background="@drawable/btn_bl_right_action"
                            android:padding="5dp"
                            android:text="@string/fa_arrow_circle_down"
                            android:textColor="#FFF"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_custome_mid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.moodybugs.saim.bdsimservices.ButtonAwesome
                        android:id="@+id/btnAddFnfSendBl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_bl_action"
                        android:text="@string/fa_send"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <!-- Add Super Fnf Panel-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="ADD SFNF"
                android:textColor="#555"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp"
                        android:text="Sadd 019XXAABBCC" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/txtAddSFnFBl"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:background="@drawable/txtbox_bl_normal"
                            android:hint="I am text box"
                            android:padding="5dp"
                            android:textSize="16dp" />

                        <com.moodybugs.saim.bdsimservices.ButtonAwesome
                            android:id="@+id/btnAddSFnfImportNumberBl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@+id/txtAddSFnFBl"
                            android:layout_toRightOf="@+id/txtAddSFnFBl"
                            android:background="@drawable/btn_bl_right_action"
                            android:padding="5dp"
                            android:text="@string/fa_arrow_circle_down"
                            android:textColor="#FFF"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_custome_mid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.moodybugs.saim.bdsimservices.ButtonAwesome
                        android:id="@+id/btnAddSFnfSendBl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_bl_action"
                        android:text="@string/fa_send"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!--Delete FnF or SFnF-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="DELETE FNF/SFNF"
                android:textColor="#555"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp"
                        android:text="Rem 019XXAABBCC" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/txtDeleteFnfBl"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:background="@drawable/txtbox_bl_normal"
                            android:hint="I am text box"
                            android:padding="5dp"
                            android:textSize="16dp" />

                        <com.moodybugs.saim.bdsimservices.ButtonAwesome
                            android:id="@+id/btnDeleteFnfImportNumberBl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@+id/txtDeleteFnfBl"
                            android:layout_toRightOf="@+id/txtDeleteFnfBl"
                            android:background="@drawable/btn_bl_right_action"
                            android:padding="5dp"
                            android:text="@string/fa_arrow_circle_down"
                            android:textColor="#FFF"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_custome_mid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.moodybugs.saim.bdsimservices.ButtonAwesome
                        android:id="@+id/btnDeleteFnfSendBl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_bl_action"
                        android:text="@string/fa_send"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--Delete FnF or SFnF End-->

        <!--Change FnF Number-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="CHANGE FNF"
                android:textColor="#555"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp"
                        android:text="Ch 019XX 019YY" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/txtChangeFnfOldBl"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:background="@drawable/txtbox_bl_normal"
                            android:hint="I am text box"
                            android:padding="5dp"
                            android:textSize="16dp" />

                        <com.moodybugs.saim.bdsimservices.ButtonAwesome
                            android:id="@+id/btnChangeFnfOldImportmBl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@+id/txtChangeFnfOldBl"
                            android:layout_toRightOf="@+id/txtChangeFnfOldBl"
                            android:background="@drawable/btn_bl_right_action"
                            android:padding="5dp"
                            android:text="@string/fa_arrow_circle_down"
                            android:textColor="#FFF"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/txtChangeFnfNewBl"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:background="@drawable/txtbox_bl_normal"
                            android:hint="I am text box"
                            android:padding="5dp"
                            android:textSize="16dp" />

                        <com.moodybugs.saim.bdsimservices.ButtonAwesome
                            android:id="@+id/btnChangeFnfNewImportmBl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@+id/txtChangeFnfNewBl"
                            android:layout_toRightOf="@+id/txtChangeFnfNewBl"
                            android:background="@drawable/btn_bl_right_action"
                            android:padding="5dp"
                            android:text="@string/fa_arrow_circle_down"
                            android:textColor="#FFF"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_custome_mid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.moodybugs.saim.bdsimservices.ButtonAwesome
                        android:id="@+id/btnChangeFnfSendBl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_bl_action"
                        android:text="@string/fa_send"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--Change FnF Number End-->

        <!--Change Super FnF Number-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="CHANGE SUPER FNF"
                android:textColor="#555"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp"
                        android:text="OldNumber NewNumber" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/txtChangeSFnfOldBl"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:background="@drawable/txtbox_bl_normal"
                            android:hint="I am text box"
                            android:padding="5dp"
                            android:textSize="16dp" />

                        <com.moodybugs.saim.bdsimservices.ButtonAwesome
                            android:id="@+id/btnChangeSFnfOldImportmBl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@+id/txtChangeSFnfOldBl"
                            android:layout_toRightOf="@+id/txtChangeSFnfOldBl"
                            android:background="@drawable/btn_bl_right_action"
                            android:padding="5dp"
                            android:text="@string/fa_arrow_circle_down"
                            android:textColor="#FFF"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_custome_mid"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/txtChangeSFnfNewBl"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:background="@drawable/txtbox_bl_normal"
                            android:hint="I am text box"
                            android:padding="5dp"
                            android:textSize="16dp" />

                        <com.moodybugs.saim.bdsimservices.ButtonAwesome
                            android:id="@+id/btnChangeSFnfNewImportmBl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@+id/txtChangeSFnfNewBl"
                            android:layout_toRightOf="@+id/txtChangeSFnfNewBl"
                            android:background="@drawable/btn_bl_right_action"
                            android:padding="5dp"
                            android:text="@string/fa_arrow_circle_down"
                            android:textColor="#FFF"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_custome_mid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.moodybugs.saim.bdsimservices.ButtonAwesome
                        android:id="@+id/btnChangeSFnfSendBl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_bl_action"
                        android:text="@string/fa_send"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--Change FnF Number End-->

        <!--Change Super FnF Number-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_custome_top"
                android:padding="10dp"
                android:text="CHECK FNF OR SUPER FNF"
                android:textColor="#555"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:background="@drawable/layout_custome_mid"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="Check FnF/SFnF : FF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_custome_mid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.moodybugs.saim.bdsimservices.ButtonAwesome
                        android:id="@+id/btnCheckFnfSendBl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_bl_action"
                        android:text="@string/fa_send"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
